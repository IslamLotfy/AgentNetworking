<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_add_post"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/blue"
    tools:context="com.example.islam.agentnetworking.AddPostActivityFragment"
    tools:showIn="@layout/activity_add_post"
    android:weightSum="1">
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_add_a_photo_white_48dp"
        android:id="@+id/imgetbtn"
        android:layout_weight="0.3" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:hint="Title"
        android:inputType="textCapWords"
        android:id="@+id/posttitle"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:background="@color/blue"
        android:textColor="@color/white"
        android:hint="description.... "
        android:id="@+id/postdesc"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:background="@color/white"
        android:textColor="@color/blue"
        android:text="next"
        android:id="@+id/postbtn"/>

</LinearLayout>
